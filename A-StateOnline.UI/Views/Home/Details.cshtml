@model A_StateOnline.Core.Models.Product

@{
    ViewBag.Title = Model.Name + "Details";
}

<h2>@Html.DisplayFor(model => model.Name) </h2>
<div class="row mt-2">
    <div class="col-md-4">
        <img class="img-responsive img-rounded" style="width:300px;height:300px" src="~/Content/ProductImages/@Model.Image" />

    </div>
    <div class="col-md-8">
        <h4>R-@Html.DisplayFor(model => model.Price)</h4>
        <h4>@Html.DisplayFor(model => model.Name)</h4>
        <p>@Html.DisplayFor(model => model.Description)</p>
        <div>
            <a href="@Url.Action("addToCart", "Cart", new { Id = Model.Id})" class="btn btn-success">Add To Cart</a>
        </div>
    </div>
</div>
   
<p>
    
    @Html.ActionLink("Back to List", "Index")
</p>
